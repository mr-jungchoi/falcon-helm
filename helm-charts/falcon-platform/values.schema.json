{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "CrowdStrike Falcon Platform Umbrella Chart Values Schema",
  "description": "Schema for the falcon-platform umbrella chart configuration",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global configuration shared across all Falcon components",
      "properties": {
        "falcon": {
          "type": "object",
          "description": "Global Falcon configuration",
          "properties": {
            "cid": {
              "type": "string",
              "description": "CrowdStrike Customer ID (CID) - required for all components",
              "pattern": "^[A-F0-9]{32}-[A-F0-9]{2}$"
            },
            "cloud_region": {
              "type": "string",
              "description": "Falcon cloud region",
              "enum": ["us-1", "us-2", "eu-1", "us-gov-1"]
            }
          }
        },
        "falconSecret": {
          "type": "object",
          "description": "Global Falcon Secret configuration for external secret injection",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable Kubernetes secrets to inject sensitive Falcon values",
              "default": false
            },
            "secretName": {
              "type": "string",
              "description": "Name of existing Kubernetes secret containing Falcon configuration"
            }
          }
        },
        "registry": {
          "type": "object",
          "description": "Container registry configuration",
          "properties": {
            "repository": {
              "type": "string",
              "description": "Registry where Falcon images are stored",
              "default": "registry.crowdstrike.com"
            },
            "pullSecrets": {
              "type": "array",
              "description": "Pull secrets for accessing private registries",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "namespace": {
          "type": "string",
          "description": "Default namespace for all components",
          "default": "falcon-system"
        }
      }
    },
    "falcon-sensor": {
      "type": "object",
      "description": "Falcon Sensor configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Falcon Sensor deployment",
          "default": true
        }
      }
    },
    "falcon-kac": {
      "type": "object", 
      "description": "Falcon Kubernetes Admission Controller configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Falcon KAC deployment", 
          "default": true
        }
      }
    },
    "falcon-image-analyzer": {
      "type": "object",
      "description": "Falcon Image Analyzer configuration", 
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable Falcon Image Analyzer deployment",
          "default": false
        },
        "crowdstrikeConfig": {
          "type": "object",
          "description": "CrowdStrike-specific configuration",
          "properties": {
            "clientID": {
              "type": "string", 
              "description": "OAuth API Client ID"
            },
            "clientSecret": {
              "type": "string",
              "description": "OAuth API Client Secret"
            },
            "agentRegion": {
              "type": "string",
              "description": "Agent region",
              "enum": ["us-1", "us-2", "eu-1", "gov1", "gov2"]
            },
            "clusterName": {
              "type": "string",
              "description": "Kubernetes cluster name"
            }
          }
        }
      }
    },
    "deploymentConfig": {
      "type": "object",
      "description": "Deployment orchestration configuration",
      "properties": {
        "phaseDeployment": {
          "type": "object",
          "description": "Phased deployment configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable phased deployment",
              "default": true
            },
            "phase1": {
              "type": "array",
              "description": "Phase 1 components (core infrastructure)",
              "items": {
                "type": "string"
              }
            },
            "phase2": {
              "type": "array", 
              "description": "Phase 2 components (policy enforcement)",
              "items": {
                "type": "string"
              }
            },
            "phase3": {
              "type": "array",
              "description": "Phase 3 components (extended features)", 
              "items": {
                "type": "string"
              }
            },
            "phase4": {
              "type": "array",
              "description": "Phase 4 components (specialized tools)",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "healthChecks": {
          "type": "object",
          "description": "Health check configuration",
          "properties": {
            "enabled": {
              "type": "boolean", 
              "description": "Enable health checks between phases",
              "default": true
            },
            "timeout": {
              "type": "integer",
              "description": "Health check timeout in seconds",
              "default": 300,
              "minimum": 30,
              "maximum": 600
            }
          }
        }
      }
    },
    "commonConfig": {
      "type": "object",
      "description": "Common configuration for all components",
      "properties": {
        "resources": {
          "type": "object",
          "description": "Default resource limits and requests",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                },
                "cpu": {
                  "type": "string", 
                  "pattern": "^[0-9]+(m|[0-9]*)$"
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi)$"
                },
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+(m|[0-9]*)$"
                }
              }
            }
          }
        }
      }
    },
    "advanced": {
      "type": "object",
      "description": "Advanced configuration options",
      "properties": {
        "debug": {
          "type": "boolean",
          "description": "Enable debug mode for all components",
          "default": false
        },
        "annotations": {
          "type": "object",
          "description": "Custom annotations for all resources"
        },
        "labels": {
          "type": "object", 
          "description": "Custom labels for all resources"
        },
        "networkPolicy": {
          "type": "object",
          "description": "Network policy configuration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable network policies",
              "default": false
            }
          }
        }
      }
    }
  },
  "required": ["global"]
}